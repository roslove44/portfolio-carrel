{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<!-- START HOME -->
<section class="section header-bg-img h-10vh align-items-center d-flex pb-0">
    <div class="bg-overlay"></div>
    <div class="container z-index">
        <div class="row justify-content-start">
            <div class="col-lg-12">
                <div class="header-content">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{path('app_main')}}" class=" text-white">Accueil</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Connexion</li>
                        </ol>
                    </nav>

                    <h4 class="text-white">ak58graph | Login</h4>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END HOME -->

<!-- START LOGIN -->
<section class="section text-center" data-turn-bg-dark>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="">
                    <h2 class="text-center custom-title"><span class="fw-bold">Connexion</span></h2>
                    <p class="text-muted mx-auto mt-3" data-turn-text-white>
                        ak58graph : OÃ¹ la passion rencontre la conception.
                    </p>
                </div>
            </div>
        </div>
        <div class="row mt-5 justify-content-center">
            <div class="col-lg-10">
                <form method="post" class="form-kerri contact_form">
                    {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a
                            href="{{ path('app_logout') }}">Logout</a>
                    </div>
                    {% endif %}

                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                        autocomplete="email" required autofocus placeholder="johndoe@gmail.com">

                    <input type="password" name="password" id="inputPassword" class="form-control"
                        autocomplete="current-password" required placeholder="******************************">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-secondary w-50 mt-3" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- END LOGIN -->
{% endblock %}